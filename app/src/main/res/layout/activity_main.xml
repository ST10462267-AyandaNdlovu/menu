<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/on_the_rocks"
    app:circularflow_angles="@string/app_name"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="253dp"
        android:layout_height="243dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="429dp"
        app:circularflow_defaultAngle="@dimen/material_emphasis_disabled_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vintage_retro_cooking_and_kitchen_label_logo" />

    <Button
        android:id="@+id/menuBtn"
        android:layout_width="114dp"
        android:layout_height="59dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="577dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="95dp"
        android:backgroundTint="#FFF4D7"
        android:text="Menu"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>